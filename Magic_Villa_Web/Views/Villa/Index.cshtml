@model IEnumerable<VillaDTO>

<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create new villa</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@((item.Rate).ToString("c"))</td>
                    <td>
                        <a asp-controller="Villa" asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary"><i class="bi bi-pencil-square"></i></a>
                        <form class="form-check-inline" asp-controller="Villa" asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button class="btn btn-danger text-white" type="submit" onclick="return confirm('Are you sure you want to delete @item.Name')"><i class="bi bi-trash-fill"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
